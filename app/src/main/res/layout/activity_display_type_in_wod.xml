<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.ClosedLoopDev.HCF.heroescrossfit_2.app.DisplayTypeInWODActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Date:"
    android:id="@+id/dateText"
    android:textAlignment="center"
    android:layout_alignParentLeft="true"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:textColor="#000000"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateTextResult"
        android:layout_below="@+id/dateTextResult"
        android:layout_toRightOf="@+id/dateStringResults"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#000000"
        android:imeOptions="actionNext"
        android:singleLine="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WOD:"
        android:id="@+id/WODText"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WODTextResult"
        android:layout_below="@+id/WODTextResult"
        android:layout_weight=".20"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textAlignment="viewEnd"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results:"
        android:id="@+id/ResultsText"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultTextResult"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#000000"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResultsText"
        android:textAlignment="center"
        android:layout_weight=".33"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"
            android:layout_alignParentTop="true"/>
        <View
            android:id="@+id/ViewColorPickerHelper"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dip"
            android:layout_marginTop="4dip"
            android:background="?android:attr/dividerVertical"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="onSaveTypedIn"
            android:layout_toLeftOf="@id/ViewColorPickerHelper"
            android:background="?android:attr/selectableItemBackground"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Save"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/ViewColorPickerHelper"/>
    </RelativeLayout>

</LinearLayout>
