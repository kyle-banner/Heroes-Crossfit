<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    style="?android:borderlessButtonStyle"
    android:orientation="vertical"
    android:theme="@style/CustomActionBarTheme"
    android:animateLayoutChanges="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/todaysWOD_main_activity_LL"
        android:layout_weight=".2"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="?android:dividerVertical"
        android:dividerPadding="8dp"
        android:gravity="center"
        android:animateLayoutChanges="true">
        <Button android:id="@+id/date_button_main_activity"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="left|center_vertical"
            style="?android:buttonBarButtonStyle"
            android:onClick="todaysWODClicked"
            android:animateLayoutChanges="true"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Today's WOD"
        android:id="@+id/todaysWOD"
        android:textColor="#000000"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_weight=".2"
        android:onClick="todaysWODClicked"
        android:gravity="left|center_vertical"
        style="?android:borderlessButtonStyle"/>
        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Type in WOD"
        android:textColor="#000000"
        android:onClick="onTypeInWOD"
        android:layout_weight=".2"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:gravity="left|center_vertical"
        style="?android:borderlessButtonStyle"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="My Saved WODs"
        android:textColor="#000000"
        android:layout_weight=".2"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:onClick="onMySavedWODs"
        android:gravity="left|center_vertical"
        style="?android:borderlessButtonStyle"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="My PRs"
        android:textColor="#000000"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_weight=".2"
        android:gravity="left|center_vertical"
        android:onClick="onMyPRClick"
        style="?android:borderlessButtonStyle"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="About Heroes Crossfit"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#000000"
        android:layout_weight=".2"
        android:gravity="left|center_vertical"
        style="?android:borderlessButtonStyle"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Contact the App Maker"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#000000"
        android:layout_weight=".2"
        android:gravity="left|center_vertical"
        style="?android:borderlessButtonStyle"/>


</LinearLayout>
